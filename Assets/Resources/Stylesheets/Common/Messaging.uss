.messaging {
    flex-direction: row;
}

.messaging #Contacts {
    height: 100%;
    width: 30%;
    min-width: 300px;
}

.messaging #ContactList {
    height: 100%;
    width: 100%;
    min-width: 300px;
    flex-grow: 1;
    max-width: 500px;
    background-color: var(--background-color);
}

.messaging #Inbox {
    height: auto;
    width: auto;
    min-width: 300px;
}

.messaging #InboxContainer {
    height: 100%;
    width: 100%;
    -unity-background-image-tint-color: rgb(255, 255, 255);
    background-color: var(--background-color);
    flex-direction: column;
}

.messaging #ContactEntry {
    width: auto;
    height: 10%;
    min-height: 75px;
    max-height: 10%;
    margin: 5px;
    flex-direction: row;
}

.messaging #Name {
}

.messaging #MessagePreview {
    align-self: auto;
    align-items: auto;
    justify-content: flex-start;
}

.messaging #Avatar {
    width: 50px;
    height: 50px;
    justify-content: center;
    align-self: center;
    align-items: center;
    background-image: url('project://database/Assets/Graphics/Avatar.png?fileID=2800000&guid=528e800a7fedd134eb86797163896006&type=3#Avatar');
    -unity-background-scale-mode: scale-to-fit;
    margin: 10px;
}

.messaging #InboxContainer #Avatar {
    margin: 10px;
}

.messaging #TextContainer {
    justify-content: center;
    align-self: center;
    align-items: flex-start;
    height: 90%;
    width: 100%;
}

.messaging #InboxContainer #InboxTitleBar {
    width: 100%;
    height: 100px;
    max-height: none;
    min-height: auto;
    flex-direction: row;
    background-color: rgb(255, 255, 255);
}

.messaging #InboxContainer #InboxTitleBar #Avatar {
    padding: 0;
    margin: 10px 10px 10px 20px;
}

.messaging #InboxContainer #QuickActionsContainer {
    width: 150px;
    height: 100%;
    justify-content: space-around;
    align-self: center;
    align-items: center;
    flex-direction: row;
}

.messaging #InboxContainer #QuickActionsContainer .icon {
    width: 30px;
    height: 30px;
}

.messaging #InboxContainer #QuickActionsContainer #AssignTaskButton {
    background-image: url('project://database/Assets/Graphics/Icons/New%20Task.png?fileID=21300000&guid=9de7ccd5ff041c548a062fc6a0b2761d&type=3#New Task');
}

.messaging #InboxContainer #QuickActionsContainer #InfoButton {
    background-image: url('project://database/Assets/Graphics/Icons/Info.png?fileID=21300000&guid=5c23495c53b0fef49833abbda73b6ad1&type=3#Info');
}

.messaging #InboxContainer #InboxMessageList {
    flex-grow: 0;
    align-items: stretch;
    justify-content: flex-start;
    align-self: auto;
    flex-direction: column-reverse;
}

.messaging #ContentContainer {
    align-self: flex-start;
    border-radius: 10px;
    padding: 8px;
    justify-content: center;
    align-items: stretch;
}

.messaging InboxMessageEntry {
    align-self: auto;
    padding: 10px;
    border-radius: 0;
    align-items: auto;
    justify-content: flex-start;
    flex-grow: 1;
    flex-shrink: 1;
    flex-direction: column;
    flex-wrap: nowrap;
    max-width: 80%;
    min-width: 200px;
}

.messaging InboxMessageEntry #Timestamp {
    font-size: 10px;
    padding-left: 8px;
    padding-right: 8px;
    padding-top: 2px;
}

.messaging MessagingField {
    flex-direction: row;
    height: 75px;
    padding-bottom: 5px;
}

.messaging MessagingField #TextField {
    flex-grow: 1;
    border-radius: 15px;
    margin: 5px;
}

.messaging MessagingField #SendButton {
    flex-grow: 0;
    width: 35px;
    height: 35px;
    align-self: center;
    border-top-left-radius: 100%;
    border-top-right-radius: 100%;
    border-bottom-right-radius: 100%;
    border-bottom-left-radius: 100%;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
}

.messaging MessagingField #unity-text-input {
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    margin-left: 0;
}

.messaging MessagingField #SendIcon {
    background-image: url('project://database/Assets/Graphics/Icons/Send.png?fileID=21300000&guid=85e7a45670f06314a9beeab5531f512d&type=3#Send');
    -unity-background-scale-mode: scale-to-fit;
    background-color: rgba(255, 255, 255, 0);
    width: 200%;
    height: 200%;
    align-self: center;
    justify-content: center;
    align-items: center;
    right: -2px;
}
