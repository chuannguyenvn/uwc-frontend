:root {
    --primary-theme-color: rgb(61, 163, 93);
    --primary-text-color: rgb(0, 0, 0);
    --secondary-text-color: rgb(82, 82, 82);
    --white-text-color: rgb(255, 255, 255);
    --background-color: rgb(255, 255, 255);
    --background-color-hovered: rgb(233, 233, 233);
}

.primary-text {
    font-size: 30px;
    -unity-font-style: normal;
}

.secondary-text {
    font-size: 25px;
    color: var(--secondary-text-color);
}

.black-text {
    color: rgb(0, 0, 0);
}

.grey-text {
    color: rgb(82, 82, 82);
}

.white-text {
    color: var(--white-text-color);
}

.colored-image {
    -unity-background-image-tint-color: var(--primary-theme-color);
}

.white-background {
    background-color: var(--background-color);
}

.colored-background {
    background-color: var(--primary-theme-color);
}

.colored-text {
    color: var(--primary-theme-color);
}

.light-element {
    background-color: var(--background-color);
}

.grey-element {
    background-color: rgb(233, 233, 233);
}

.view {
    height: 100%;
    width: 100%;
    flex-grow: 1;
}

.list {
    height: 100%;
    width: 30%;
    min-width: 300px;
    max-width: 500px;
    flex-grow: 1;
    background-color: var(--background-color);
}

.list-item {
    height: 75px;
    border-radius: 10px;
    background-color: var(--background-color);
    width: auto;
    min-height: 75px;
    max-height: 10%;
    margin: 5px;
    flex-direction: row;
}

.list-item #TextContainer {
    justify-content: center;
    align-self: center;
    align-items: flex-start;
    height: 90%;
    width: 100%;
}

.list-item:hover {
    background-color: var(--background-color-hovered);
    transition-duration: 0.1s;
    transition-property: background-color;
    transition-timing-function: ease-in-sine;
}

.icon {
    -unity-background-scale-mode: scale-to-fit;
    width: 60%;
    height: 60%;
    justify-content: center;
    align-self: center;
    align-items: center;
    margin: 10px;
    -unity-background-image-tint-color: var(--background-color);
    background-color: rgba(0, 0, 0, 0);
}

.icon-container {
    background-color: var(--primary-theme-color);
    width: 50px;
    height: 50px;
    margin: 10px;
    border-radius: 10px;
    position: relative;
    align-self: center;
    justify-content: center;
    flex-shrink: 0;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    border-bottom-left-radius: 6px;
}

.full-screen-panel {
    height: 100%;
    width: 100%;
    background-color: var(--background-color);
}
